<project name="Mconf" default="bbb-deploy" basedir=".">

    <property name="home" location="/home/firstuser"/>
    <property name="bbb-source" location="${home}/dev/source/bigbluebutton"/>

    <target name="bbb-deploy">
        <zip destfile="bigbluebutton.zip">
            <zipfileset dir="${bbb-source}/bigbluebutton-client/bin" prefix="/var/www/bigbluebutton/client"/>
            <zipfileset dir="${bbb-source}/bigbluebutton-apps/build/bigbluebutton" prefix="/usr/share/red5/webapps"/>
            <zipfileset dir="${bbb-source}/bbb-voice/build/sip" prefix="/usr/share/red5/webapps"/>
            <fileset dir="${bbb-source}/bigbluebutton-web" includes="*.war"/>
        </zip>
    </target>
</project>

